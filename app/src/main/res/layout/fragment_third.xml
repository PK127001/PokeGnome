<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:text="@string/forum_welcome"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageview_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/wizek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/wyksztalciuch"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/babelek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/chemik"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/chemik2"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_sixth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/googlak"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_seventh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/hapek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_eigth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/kacus"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_nineth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/lappek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_tenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/lunatyk"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_eleventh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/poliglotek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_twelveth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/automatek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_thirteenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/stomatolog"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_fourteenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/adwokatka"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_fifteenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/agorek"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_sixteenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/pokojmoniki"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/imageview_seventeenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/budynekc4"
                android:layout_marginTop="16dp" />

            <FrameLayout
                android:id="@+id/third_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="120dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
